{
	"id": "anilist-autopause",
	"name": "Anilist Autopause",
	"version": "1.0.1",
	"manifestURI": "https://raw.githubusercontent.com/nnotwen/n-seanime-extensions/master/plugins/Anilist%20Autopause/anilist-autopause.json",
	"language": "typescript",
	"type": "plugin",
	"description": "Automatically pause your AniList entries when you stop watching for a set time.",
	"author": "nnotwen",
	"icon": "https://raw.githubusercontent.com/nnotwen/n-seanime-extensions/master/plugins/Anilist%20Autopause/icon.png",
	"website": "https://github.com/nnotwen/n-seanime-extensions",
	"lang": "en",
	"payloadURI": "https://raw.githubusercontent.com/nnotwen/n-seanime-extensions/master/plugins/Anilist%20Autopause/provider.ts",
	"plugin": {
		"version": "1",
		"permissions": {
			"scopes": ["anilist", "storage", "database", "anilist-token"]
		}
	},
	"userConfig": {
		"requiresConfig": true,
		"version": 1,
		"fields": [
			{
				"name": "duration",
				"label": "Pause Threshold â€” the period of inactivity before status changes to Paused.",
				"type": "select",
				"default": "1209600000",
				"options": [
					{
						"label": "Weekly",
						"value": "604800000"
					},
					{
						"label": "Biweekly",
						"value": "1209600000"
					},
					{
						"label": "Monthly",
						"value": "2592000000"
					},
					{
						"label": "Quarterly",
						"value": "7776000000"
					},
					{
						"label": "Semiannual",
						"value": "15552000000"
					},
					{
						"label": "Annual",
						"value": "31536000000"
					}
				]
			}
		]
	}
}
